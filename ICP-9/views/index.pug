body
.container()
    h1.text-center Enter Student Details here
    form(action = "/details", method = "POST")
        .form-group
            label Class-ID:
            input.form-control(type='text', name='id')
        .form-group
            label First Name:
            input.form-control(type='text', name='fname')
        .form-group
            label Last Name:
            input.form-control(type='text', name='lname')
        .form-group
            label Course:
            input.form-control(type='text', name='course')
        .form-group
            label Major:
            input.form-control(type='text', name='major')
        .form-group
            label Minor:
            input.form-control(type='text', name='minor')
        .text-center
        button(type = "submit") Submit
